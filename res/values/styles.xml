<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="myTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarTabStyle">@style/myTheme.ActionBarTab</item>
        <item name="android:actionBarTabBarStyle">@style/myTheme.ActionBarTab</item>
        <item name="android:actionBarTabTextStyle">@style/myTheme.ActionBarTab.Text</item>
    </style>

    <style name="myTheme.ActionBarTab" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/tab_bar_background</item>
        <item name="android:titleTextStyle">@style/myTheme.ActionBar.Text</item>
        <item name="android:subtitleTextStyle">@style/myTheme.ActionBarTab.Text</item>
    </style>

    <style name="myTheme.ActionBar.Text" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/holo_blue_light</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="myTheme.ActionBarTab.Text" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/holo_blue_light</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
